<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:id="@+id/matties_list_item">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp">

        <ImageView
            android:id="@+id/matties_image"
            android:layout_width="wrap_content"
            android:maxHeight="20dp"
            android:src="@drawable/user32"
            android:scaleType="fitCenter"
            android:layout_height="50dp" />

        <TextView
            android:id="@+id/matties_name"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:hint="Name"
            android:gravity="center_vertical" />

        <Button
            android:id="@+id/matties_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:background="@color/colorPrimary"
            android:text="@string/add_mattie_button"
            android:textAlignment="gravity"
            android:paddingLeft="@dimen/addMattieButtonPadding"
            android:paddingRight="@dimen/addMattieButtonPadding"
            android:textColor="@android:color/white"
            android:gravity="center_vertical|center_horizontal|end" />

    </LinearLayout>

</RelativeLayout>