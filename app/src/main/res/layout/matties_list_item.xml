<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:id="@+id/matties_list_item">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp">


        <FrameLayout
            android:layout_width="48dp"
            android:layout_height="48dp">

            <ImageView
                android:id="@+id/matties_image"
                android:layout_width="match_parent"
                android:src="@drawable/user32"
                android:scaleType="fitCenter"
                android:layout_height="match_parent" />
        </FrameLayout>

        <TextView
            android:id="@+id/matties_name"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:hint="Name"
            android:gravity="center_vertical"
            android:layout_marginLeft="6dp" />

        <ImageButton
            android:id="@+id/matties_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_add_white_24dp"
            android:layout_weight="0"
            android:layout_marginEnd="6dp"
            android:background="@color/colorPrimary"
            android:padding="8dp" />

        <!--<Button-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_weight="0"-->
        <!--android:background="@color/colorPrimary"-->
        <!--android:text="@string/add_mattie_button"-->
        <!--android:textAlignment="gravity"-->
        <!--android:paddingLeft="@dimen/addMattieButtonPadding"-->
        <!--android:paddingRight="@dimen/addMattieButtonPadding"-->
        <!--android:textColor="@android:color/white"-->
        <!--android:gravity="center_vertical|center_horizontal|end" />-->

    </LinearLayout>

</RelativeLayout>