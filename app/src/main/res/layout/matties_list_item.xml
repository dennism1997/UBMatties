<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <!--<ImageView-->
    <!--android:id="@+id/matties_image"-->
    <!--android:layout_width="wrap_content"-->
    <!--android:layout_height="wrap_content"-->
    <!--android:contentDescription="@string/matties_image"/>-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/matties_name"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:hint="Name"
            android:gravity="center_vertical"
            android:layout_marginLeft="@dimen/matties_left_margin" />

        <Button
            android:id="@+id/matties_button"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0"
            android:gravity="center_vertical|center_horizontal|end"
            android:background="@color/colorPrimary"
            android:text="@string/add_mattie_button"
            android:textAlignment="gravity"
            android:paddingLeft="@dimen/addMattieButtonPadding"
            android:paddingRight="@dimen/addMattieButtonPadding"
            android:textColor="@android:color/white" />

    </LinearLayout>

</RelativeLayout>